<!-- Modal Trigger -->
<div class="right-align" style="margin-top: 5px; margin-right: 10px;">
    <a class="waves-effect waves-light btn-floating modal-trigger red" href="#modal1"><i class="mdi-content-add"></i></a>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-content">
    <h4>Journal Entry</h4>
    <%  @journal = Journal.new %>
    <%= render 'form' %>
  </div>

</div>


<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#test1">Journal Entries</a></li>
      <li class="tab col s3"><a class=href="#test2">Account Ledger</a></li>
      <li class="tab col s3"><a href="#test3">Test 3</a></li>
      <li class="tab col s3"><a href="#test4">Test 4</a></li>
    </ul>
  </div>
  <div id="test1" class="col s12">
    <table class="striped">
      <thead>
      <tr>
        <th>Date of journal</th>
        <th>Payee</th>
        <th>Description</th>
        <th>Account</th>
        <th>Amount</th>
        <th>User</th>
        <th>Is posted</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @journals.each do |journal| %>
          <tr>
            <td><%= journal.date_of_journal %></td>
            <td><%= journal.payee %></td>
            <td><%= journal.description %></td>
            <td><%= journal.account_id %></td>
            <td><%= journal.amount %></td>
            <td><%= journal.user_id %></td>
            <td><%= journal.is_posted %></td>
            <td><%= link_to 'Show', journal %></td>
            <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
            <td><%= link_to 'Destroy', journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div id="test2" class="col s12">Account Ledger</div>
  <div id="test3" class="col s12">Test 3</div>
  <div id="test4" class="col s12">Test 4</div>
</div>





